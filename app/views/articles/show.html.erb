<div class="container">
 
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>   
  <p>
    <strong>Text:</strong>
    <%= @article.content %>
  </p>
</div>

 
    <%= link_to "Comments", "#", id: "comments-link" %>
  
  <div class="comments-section">
  <ol id="comments">
  <%= render @comments %>
  </ol>
  <h2>Add Comment</h2>
  <%= form_for [@article, @article.comments.build] , remote:true do |f| %>
    
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit "Create Comment" %>
    </p>
  <% end %>
  </div>


<%= link_to 'Back', articles_path, class: "big button" %>